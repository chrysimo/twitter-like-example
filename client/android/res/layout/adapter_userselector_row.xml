<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            style="@style/UserSelectorRowContent">

        <ImageView
                style="@style/UserSelectorRowContentImage"
                android:id="@+id/ivUserSelectorIcon"/>

     
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/ivUserSelectorIcon"
                style="@style/UserSelectorRowContentTitle"
                android:id="@+id/tvUserSelectorTitle"/>

        
       
          <ImageView
           android:id="@+id/ivRemoveUser"
           style="@style/OrderListActionIcons"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
           android:src="@drawable/ic_action_remove" />
         
         
         <ImageView
           android:id="@+id/ivFollowUser"
           style="@style/OrderListActionIcons"
           android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
           android:src="@drawable/ic_action_new" />
         
         

    </RelativeLayout>